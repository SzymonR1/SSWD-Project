<!DOCTYPE html>
<html>
    <head>
        <% include partials/head %>
        <div>
            <ul class="navbar">
            <li><a href="/">Home</a></li>
            <li><a href="/usages/create">Add usage</a></li>
            <li><a href="/usages/all">All usages</a></li>
            <li><a href="/usages/search">Search</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/help">Help</a></li>
            </ul>
        </div>
            <title><%= title %></title>
            <link rel='stylesheet' href='/stylesheets/style.css' />
            <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,700" rel="stylesheet">
    </head>
    
    <div class="wrapper">
        <h1><a><%= title %></a></h1>
        <div class="ra-r"></div>
    <form action="/usages/edit/<%= usagelist._id %>" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" pattern="[A-Za-z]+" name="name" value="<%= usagelist.name %>" required>
            <br /> <br />
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="<%= usagelist.date %>" required>
            <br /> <br />
        </div>
        <div class="form-group">
            <label for="usage1">Education (mins)</label>
            <input type="number" class="form-control" id="usage1" name="usage1" value="<%= usagelist.usage1 %>" required>
            <br /> <br />
        </div>
        <div class="form-group">
            <label for="usage2">Shopping (mins)</label>
            <input type="number" class="form-control" id="usage2" name="usage2" value="<%= usagelist.usage2 %>" required>
            <br /> <br />
        </div>
        <div class="form-group">
            <label for="usage3">Browsing (mins)</label>
            <input type="number" class="form-control" id="usage3" name="usage3" value="<%= usagelist.usage3 %>" required>
            <br /> <br />
        </div>
        <div class="form-group">
            <label for="usage4">Social Media (mins)</label>
            <input type="number" class="form-control" id="usage4" name="usage4" value="<%= usagelist.usage4 %>" required>
            <br /> <br />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>
    </form>

    <% include partials/foot %>
</html>